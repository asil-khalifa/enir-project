<MainWidget>:
    Button:
        text: "Hello World"
        size: "100dp", "80dp"
        pos: "300dp", "200dp"
        color: 0, 0, 1, 1

    Label:
        text: "Hello Again!"
        size: "100dp", "80dp"
        pos: "400dp", "200dp"
        color: 1, 0, 0, 1
