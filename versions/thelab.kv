BoxLayoutExample:

<BoxLayoutExample>:
    orientation: 'horizontal'
    Button:
        text: 'A'
        #size: '40dp', '160dp'
        size_hint: 0.50, None
        #width: '100dp'
        height: '50dp'
        pos_hint: {'top':1}
    Button:
        text: 'C'
        size_hint: 1, 1
